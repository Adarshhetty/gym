    <header>
        <h1>Enter your tasks</h1>
        <form id="new-form" method="post" action="/addTask">
            <input type="text" id="new-input" placeholder="What have you planned" name="desc" />
            <input type="submit" id="new-submit" value="Add task" />
        </form>
    </header>
    <main>
        <section class="task-list">
            <h2>Your tasks</h2>
            <div id="tasks">

                {{#each info}}
                <div class="task">
                    <div class="content">
                        <input type="text" class="text" value="{{description}}" readonly />
                    </div>
                    <div class="actions">
                        {{! <button class="edit">Edit</button> }}
                        <form action="/delete" method="post">
                            {{! <button class="delete">Delete</button> }}
                            <input type="hidden" name="desc_id" value="{{desc_id}}" />
                            <input type="submit" value="Delete" />
                        </form>
                    </div>
                </div>
                {{/each}}
            </div>
        </section>
    </main>
</body>
